<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/main"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".Registro">

    <TextView
        android:id="@+id/titulo"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Registro"
        android:textSize="25dp"
        android:textAlignment="center"
        android:layout_marginTop="20dp"
        android:textStyle="bold"/>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:padding="20dp">

        <Button
            android:id="@+id/eleccionIniciar"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:layout_marginRight="10dp"
            android:text="Iniciar Sesión"
            android:textColor="@color/black"
            android:backgroundTint="@color/beige"/>

        <Button
            android:id="@+id/eleccionRegistrar"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:layout_marginLeft="10dp"
            android:text="Registrarme"
            android:textColor="@color/black"
            android:backgroundTint="@color/beige"/>

    </LinearLayout>


    <LinearLayout
        android:id="@+id/layoutIniciar"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:padding="20dp"
        android:visibility="visible"
        >

        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="ID:"/>
        <EditText
            android:id="@+id/usuarioIniciarSesion"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:hint="ID"
            android:textSize="16dp"
            android:inputType="number"
            android:singleLine="true"/>

        <TextView
            android:layout_marginTop="30dp"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Contraseña:"/>
        <EditText
            android:id="@+id/contraIniciarSesion"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:hint="Contraseña"
            android:textSize="17dp"
            android:inputType="textPassword"
            android:singleLine="true"/>

        <Button
            android:id="@+id/iniciar"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="20dp"
            android:text="Iniciar Sesión"
            android:layout_gravity="center"
            android:backgroundTint="@color/azul"/>

    </LinearLayout>


    <LinearLayout
        android:id="@+id/layoutRegistrarme"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:padding="20dp"
        android:visibility="invisible">

        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Nombre:"/>
        <EditText
            android:id="@+id/nombres"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:hint="Nombre(s)"
            android:textSize="16dp"
            android:inputType="text"
            android:singleLine="true"/>

        <TextView
            android:layout_marginTop="30dp"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Apellidos:"/>
        <EditText
            android:id="@+id/apellidos"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:hint="Apellidos"
            android:textSize="17dp"
            android:inputType="text"
            android:singleLine="true"/>

        <TextView
            android:layout_marginTop="30dp"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="ID:"/>
        <EditText
            android:id="@+id/id_alumno"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:hint="ID"
            android:textSize="17dp"
            android:inputType="number"
            android:singleLine="true"/>

        <TextView
            android:layout_marginTop="30dp"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Carrera:"/>
        <Spinner
            android:id="@+id/carrera"
            android:layout_width="match_parent"
            android:layout_height="50dp"/>

        <TextView
            android:layout_marginTop="30dp"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Contraseña:"/>
        <EditText
            android:id="@+id/contraRegistro"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:hint="Contraseña"
            android:textSize="17dp"
            android:inputType="textPassword"
            android:singleLine="true"/>

        <Button
            android:id="@+id/registrar"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="20dp"
            android:text="Registrarme"
            android:layout_gravity="center"
            android:backgroundTint="@color/azul"/>

    </LinearLayout>

    <!--<ImageView
        android:layout_width="565px"
        android:layout_height="356px"
        android:src="@drawable/uaa_logo"
        android:layout_gravity="center"
        android:layout_marginTop="30dp"/>-->

</LinearLayout>